<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".AddEvent"
    tools:openDrawer="start"
    tools:ignore="Overdraw">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:id="@+id/eventViewDate"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:inputType="none"
            android:text="@string/title"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="#FF000000"
            android:textColorLink="#FF000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/eventViewStartTime"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="none"
            android:text="@string/date"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="#00000000"
            android:textColorLink="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventViewDate" />

        <TextView
            android:id="@+id/eventViewEndTime"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="none"
            android:text="@string/start_time"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="#00000000"
            android:textColorLink="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventViewStartTime" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="none"
            android:text="@string/location"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="#00000000"
            android:textColorLink="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventViewNote" />

        <TextView
            android:id="@+id/textViewNotes"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="none"
            android:text="@string/notes"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="#00000000"
            android:textColorLink="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewReminder" />

        <TextView
            android:id="@+id/textViewGraded"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="none"
            android:text="@string/graded"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="#00000000"
            android:textColorLink="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewNotes" />

        <TextView
            android:id="@+id/textViewReminder"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="none"
            android:text="@string/reminder"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="#00000000"
            android:textColorLink="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRepeat" />

        <TextView
            android:id="@+id/eventViewLocation"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="none"
            android:text="@string/end_time"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="#00000000"
            android:textColorLink="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventViewEndTime" />

        <TextView
            android:id="@+id/textViewRepeat"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="none"
            android:text="@string/repeat"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="#00000000"
            android:textColorLink="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewLocation" />

        <TextView
            android:id="@+id/eventViewNote"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="none"
            android:text="@string/group_color"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="#00000000"
            android:textColorLink="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventViewLocation" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/redboarder"
            android:ems="10"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:padding="6dp"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.67"
            app:layout_constraintStart_toEndOf="@+id/eventViewDate"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/editTextDate"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/redboarder"
            android:ems="10"
            android:hint="@string/select_date"
            android:onClick="setDate"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.67"
            app:layout_constraintStart_toEndOf="@+id/eventViewStartTime"
            app:layout_constraintTop_toBottomOf="@+id/editTextName" />

        <EditText
            android:id="@+id/editTextLocation"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/redboarder"
            android:ems="10"
            android:hint="@string/location_hint"
            android:inputType="textShortMessage"
            android:padding="6dp"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textViewLocation"
            app:layout_constraintTop_toBottomOf="@+id/spinnerColor" />

        <Spinner
            android:id="@+id/spinnerColor"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/redboarder"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/eventViewNote"
            app:layout_constraintTop_toBottomOf="@+id/spinnerEndMinute" />

        <Spinner
            android:id="@+id/spinnerRepeat"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/redboarder"
            android:textColor="?attr/colorOnSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.67"
            app:layout_constraintStart_toEndOf="@+id/textViewRepeat"
            app:layout_constraintTop_toBottomOf="@+id/editTextLocation" />

        <Spinner
            android:id="@+id/spinnerReminder"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/redboarder"
            android:textColor="?attr/colorOnSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textViewReminder"
            app:layout_constraintTop_toBottomOf="@+id/spinnerRepeat" />

        <EditText
            android:id="@+id/editTextNotes"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/redboarder"
            android:ems="10"
            android:hint="@string/notes_hint"
            android:inputType="textLongMessage"
            android:padding="6dp"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.67"
            app:layout_constraintStart_toEndOf="@+id/textViewNotes"
            app:layout_constraintTop_toBottomOf="@+id/spinnerReminder" />

        <Button
            android:id="@+id/eventViewEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="submit"
            android:text="@string/create_event"
            android:textColor="?attr/colorOnSecondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gradedSwitch" />

        <Spinner
            android:id="@+id/spinnerStartHour"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/redboarder"
            android:textColor="?attr/colorOnSecondary"
            app:layout_constraintEnd_toStartOf="@+id/spinnerStartMinute"
            app:layout_constraintHorizontal_bias="0.726"
            app:layout_constraintStart_toEndOf="@+id/eventViewEndTime"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

        <Spinner
            android:id="@+id/spinnerEndHour"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/redboarder"
            android:textColor="?attr/colorOnSecondary"
            app:layout_constraintEnd_toStartOf="@+id/spinnerEndMinute"
            app:layout_constraintHorizontal_bias="0.74"
            app:layout_constraintStart_toEndOf="@+id/eventViewLocation"
            app:layout_constraintTop_toBottomOf="@+id/spinnerStartHour" />

        <Spinner
            android:id="@+id/spinnerStartMinute"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="28dp"
            android:textColor="?attr/colorOnSecondary"
            android:background="@drawable/redboarder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

        <Spinner
            android:id="@+id/spinnerEndMinute"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="28dp"
            android:textColor="?attr/colorOnSecondary"
            android:background="@drawable/redboarder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerStartMinute" />

        <Switch
            android:id="@+id/gradedSwitch"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/redboarder"
            android:padding="6dp"
            android:text="Graded"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.67"
            app:layout_constraintStart_toEndOf="@+id/textViewGraded"
            app:layout_constraintTop_toBottomOf="@+id/editTextNotes" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:title="Add Event"
            app:titleTextColor="?attr/colorOnPrimary" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/colorPrimary"
        app:headerLayout="@layout/nav_header"
        app:itemIconSize="24dp"
        app:itemIconTint="?attr/colorOnPrimary"

        app:itemTextAppearance="@style/MenuItems"
        app:itemTextColor="?attr/colorOnPrimary"
        app:menu="@menu/nav_menu" />


</androidx.drawerlayout.widget.DrawerLayout>